{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: Client",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "build/Client",
                "src/Client.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":"$gcc"
        },
        {
            "label": "Build: Server",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "build/Server",
                "src/Server.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":"$gcc"
        }
    ]
}